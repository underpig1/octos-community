{
    "name": "Dynamic Geometry",
    "author": "SquiEmperor",
    "description": "Neon lights and patterns.",
    "authorsite": "https://github.com/reidg03",
    "version": "1.0",
    "preview": "preview.png",
    "image": "preview.png",
    "options": {
        "Scene": { "type": "select", 
            "label": "Scene:", 
            "options": ["Spiral", "Worms", "Factory"],
            "value": "Spiral",
            "onchangeload": "window.updateScene"
        },
        "colorScheme": { "type": "select", 
            "label": "Color Scheme:", 
            "options": ["Default", "Custom"],
            "value": "Custom",
            "onchangeload": "window.updateColorScheme"
        },
        "color1": {
            "label": "Custom color 1:",
            "type": "color-picker",
            "value": "#1a1a1a",
            "onchangeload": "window.updateCustomColor1"
        },
        "color2": {
            "label": "Custom color 2:",
            "type": "color-picker",
            "value": "#784de6",
            "onchangeload": "window.updateCustomColor2"
        },
        "speed": {
            "label": "Speed:",
            "type": "range",
            "value": 0.3,
            "step": 0.1,
            "min": 0,
            "max": 2,
            "onchangeload": "window.updateSpeed"
        }
    }
}